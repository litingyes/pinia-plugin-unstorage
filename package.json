{
  "name": "pinia-plugin-unstorage",
  "type": "module",
  "version": "0.2.0",
  "private": false,
  "description": "The best persistence plugin for pinia.",
  "author": "litingyes <luz.liting@gmail.com> (https://litingyes.top/)",
  "license": "MIT",
  "homepage": "https://github.com/litingyes/pinia-plugin-unstorage#readme",
  "bugs": {
    "url": "https://github.com/litingyes/pinia-plugin-unstorage/issues"
  },
  "keywords": [
    "vue",
    "pinia",
    "persist",
    "storage"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./nuxt": {
      "types": {
        "import": "./dist/module.d.mts",
        "require": "./dist/module.d.cts"
      },
      "import": "./dist/module.d.mts",
      "require": "./dist/module.d.cts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "prebuild": "cd examples/nuxt && pnpm install && pnpm prepare",
    "build": "nuxt-module-build build",
    "commit": "git-cz",
    "release": "bumpp",
    "prepare": "husky"
  },
  "peerDependencies": {
    "pinia": "3",
    "vue": "3"
  },
  "dependencies": {
    "@nuxt/kit": "^3.15.4",
    "destr": "^2.0.3",
    "unstorage": "^1.14.4",
    "usexx": "^0.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.14.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@nuxt/module-builder": "^0.8.4",
    "@nuxt/schema": "^3.15.4",
    "@types/node": "22",
    "bumpp": "^9.10.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "inquirer": "^12.3.3",
    "lint-staged": "^15.4.3",
    "typescript": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
